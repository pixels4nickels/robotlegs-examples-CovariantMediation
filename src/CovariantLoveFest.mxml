<?xml version = "1.0" encoding = "utf-8"?>
<s:Application xmlns:fx = "http://ns.adobe.com/mxml/2009"
			   xmlns:s = "library://ns.adobe.com/flex/spark"
			   xmlns:mxml = "robotlegs.bender.mxml.*"
			   xmlns:cfg = "cfg.*"
			   xmlns:views = "views.*"
			   minWidth = "955"
			   minHeight = "600"
			   creationComplete = "creationCompleteHandler(event)">
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;

			import views.SomeView;
			import views.YetAnotherView;

			protected function creationCompleteHandler( event:FlexEvent ):void
			{
				contextTag.context.lifecycle.afterInitializing( contextInitialized );
			}

			protected function contextInitialized():void
			{
				addElement( new YetAnotherView());
			}
		]]>
	</fx:Script>
	<fx:Declarations>
		<mxml:ContextBuilderTag id = "contextTag"
								contextView = "{this}">
			<cfg:AppBundle />
			<cfg:AppConfig />
		</mxml:ContextBuilderTag>
	</fx:Declarations>
	<s:layout>
		<s:VerticalLayout gap = "10"
						  paddingBottom = "5"
						  paddingLeft = "5"
						  paddingRight = "5"
						  paddingTop = "5" />
	</s:layout>
	<views:SomeView/>
	<views:AnotherView />
</s:Application>
